function GetHtmlLi(n,t){var i="";return i+="<li>",i+='<div class="sliderBoxContainer" style="position: relative; color: '+n.panel_color+'">',i+=t,i+='<div class="item_pub_contenido" style="position: relative">',i+='<div class="item_pub_contenido_titulo">'+(n.title||"")+"<\/div>",i+='<div class="item_pub_contenido_copete">'+(n.header||"")+"<\/div>",n.link!=null&&n.link!=""&&(i+='<div class="item_pub_contenido_link">            <a href="'+n.link+'" target="_blank" style="color: '+n.panel_color+' !important">                <b>'+lblMasInfo+'&nbsp;<\/b>                <span class="container-glyphicon">                    <span class="glyphicon glyphicon-menu-right icon-circle-container"><\/span>                <\/span>            <\/a>        <\/div>'),i+="<\/div>",i+="<\/div>",i+"<\/li>"}function GetHtmlLiFooter(n,t){var i="";return i+="<li>",i+='<div class="sliderBoxContainer" style="position: relative; color: '+n.panel_color+'">',i+=t,i+='<div class="item_pub_contenido" style="position: absolute; bottom: 20px; width: 100%">',i+='<div class="item_pub_contenido_titulo"><h1 style="color: '+n.panel_color+' !important">'+(n.title||"")+"<\/h1><\/div>",i+='<div class="item_pub_contenido_copete" style="padding-bottom: 10px"><h4 style="color: '+n.panel_color+' !important">'+(n.header||"")+"<\/h4><\/div>",n.link!=null&&n.link!=""&&(i+='<div class="item_pub_contenido_link">            <a href="'+n.link+'" target="_blank" style="color: '+n.panel_color+' !important">                <b>'+lblMasInfo+'&nbsp;<\/b>                <span class="container-glyphicon">                    <span class="glyphicon glyphicon-menu-right icon-circle-container"><\/span>                <\/span>            <\/a>        <\/div>'),i+="<\/div>",i+="<\/div>",i+"<\/li>"}function CrearSlides(n,t){var f="",i="",e="",u="",r;for(n[0].image!=null&&n[0].image!=""?(i=rutaBase+n[0].image,e=InsertString(i,"_480",i.lastIndexOf(".")),i=InsertString(i,"_"+_dimension,i.lastIndexOf(".")),u='<div class="sliderBox" style="background-image: url(\''+i+"')\"><\/div>"):u='<div class="sliderBox" style="background-color: '+n[0].panel_color+'"><\/div>',f+=GetHtmlLi(n[0],u),r=1;r<n.length;r++)n[r].image!=null&&n[r].image!=""?(i=rutaBase+n[r].image,e=InsertString(i,"_480",i.lastIndexOf(".")),i=InsertString(i,"_"+_dimension,i.lastIndexOf(".")),u="<div style=\"background-image: url('"+e+"')\" class='sliderBox lazy blur' data-src='"+i+"'><\/div>"):u='<div class="sliderBox" style="background-color: '+n[r].panel_color+'"><\/div>',f+=GetHtmlLi(n[r],u);$("#"+t).html(f)}function CrearSlidesFooter(n,t){var r,f="",i="",e="",u="";for(n[0].image!=null&&n[0].image!=""?(i=rutaBase+n[0].image,e=InsertString(i,"_480",i.lastIndexOf(".")),i=InsertString(i,"_"+_dimension,i.lastIndexOf(".")),u='<div class="sliderBoxFooter" style="background-image: url(\''+i+"')\"><\/div>"):u='<div class="sliderBoxFooter" style="background-color: '+n[0].panel_color+'"><\/div>',f=f+GetHtmlLiFooter(n[0],u),r=1;r<n.length;r++)n[r].image!=null&&n[r].image!=""?(i=rutaBase+n[r].image,e=InsertString(i,"_480",i.lastIndexOf(".")),i=InsertString(i,"_"+_dimension,i.lastIndexOf(".")),u="<div style=\"background-image: url('"+e+"')\" class='sliderBoxFooter lazy blur' data-src='"+i+"'><\/div>"):u='<div class="sliderBoxFooter" style="background-color: '+n[r].panel_color+'"><\/div>',f=f+GetHtmlLiFooter(n[r],u);$("#"+t).html(f)}function InsertString(n,t,i){return n.slice(0,i)+t+n.slice(i)}function InicializarSlides(n){var t=!0;t=$("#"+n+" li").length>1?!0:!1;$("#"+n).lightSlider({item:1,slideMove:1,slideMargin:0,auto:!0,speed:1500,pauseOnHover:!0,pause:5e3,loop:t,pager:!0,controls:!1,enableTouch:!0,enableDrag:!1,onAfterSlide:function(){$(".lazy").lazy({effect:"fadeIn",effectTime:0,threshold:0,afterLoad:function(n){n.removeClass("blur")}})}});$(".lazy").lazy({effect:"fadeIn",effectTime:0,threshold:0,afterLoad:function(n){n.removeClass("blur")}})}function GetDimensionImagen(){var n=$(window).width();switch(!0){case n<=479:return"480";case n>480&&n<=600:return"600";case n>600&&n<=800:return"800";case n>800&&n<=1200:return"1200";case n>1200&&n<=1600:return"1600";case n>1600:return"1900";default:return"480"}}